<%# bootstrapping the current user %>
<% if logged_in? %>
  <script type="text/javascript">
    // The below avoids the app breaking on page refresh when  
    // the partial is not available.
    <% if lookup_context.exists?("api/users/user", [], true) %>
      window.currentUser = <%= render(
          "api/users/user",
          user: current_user
        ).html_safe %>
    <% end %>
  </script>
<% end %>

<main id="root"></main>
